<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建表"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/delete_table_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除表"
        app:layout_constraintTop_toBottomOf="@id/create_test"/>
    <Button
        android:id="@+id/insert_test"
        app:layout_constraintTop_toBottomOf="@id/delete_table_test"
        android:layout_width="match_parent"
        android:text="插入数据"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/query_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询数据"
        app:layout_constraintTop_toBottomOf="@id/insert_test"/>
    <Button
        android:id="@+id/delete_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据"
        app:layout_constraintTop_toBottomOf="@id/query_test"/>
    <Button
        android:id="@+id/update_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新数据"
        app:layout_constraintTop_toBottomOf="@id/delete_test"/>

</androidx.constraintlayout.widget.ConstraintLayout>